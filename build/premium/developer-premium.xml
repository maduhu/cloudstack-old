<project name="Cloud.com Developer Premium Targets" basedir=".">
  <description>
        This is a developer.xml with tools to start and stop tomcat and 
        generally developer targets that has nothing to do with compiling.
    </description>


  <dirname property="base.dir" file="${ant.file.Cloud.com Developer Premium Targets}/../.."/>
  <property name="build.dir" location="${base.dir}/build"/>
  
  <import file="${build.dir}/developer.xml" optional="false"/>

  <target name="deploy-server" depends="deploy-common" >
    <copy todir="${server.deploy.to.dir}/webapps/client/WEB-INF/lib/vms" file="${dist.dir}/systemvm-premium.zip" />
  </target>

</project>


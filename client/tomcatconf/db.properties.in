# management server clustering parameters, change cluster.node.IP to the machine IP address
# in which the management server(Tomcat) is running
cluster.node.IP=127.0.0.1
cluster.servlet.port=9090

# VMOps database settings
db.vmops.username=@DBUSER@
db.vmops.password=@DBPW@
db.vmops.host=@DBHOST@
db.vmops.port=3306
db.vmops.name=vmops

# VMOps database tuning parameters
db.vmops.maxActive=250
db.vmops.maxIdle=30
db.vmops.maxWait=10000
db.vmops.autoReconnect=true
db.vmops.validationQuery=SELECT 1
db.vmops.testOnBorrow=true
db.vmops.testWhileIdle=true
db.vmops.timeBetweenEvictionRunsMillis=40000
db.vmops.minEvictableIdleTimeMillis=240000
db.vmops.removeAbandoned=false
db.vmops.removeAbandonedTimeout=300
db.vmops.logAbandoned=true
db.vmops.poolPreparedStatements=false
db.vmops.url.params=prepStmtCacheSize=517&cachePrepStmts=true

# usage database settings
db.usage.username=@DBUSER@
db.usage.password=@DBPW@
db.usage.host=@DBHOST@
db.usage.port=3306
db.usage.name=vmops_usage

# usage database tuning parameters
db.usage.maxActive=100
db.usage.maxIdle=30
db.usage.maxWait=10000
db.usage.autoReconnect=true
